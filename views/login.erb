<section id="login">
<h1>Welcome to the Pair Scheduler</h1>

    <p><a href="/auth/login">Log In</a> | <a href="/protected">Home</a> | <a href="/sign_up">Sign Up</a> | <a href="/auth/logout">Log Out</a></p>

<form action="/auth/login" method="post">
  <p>Username: <input type="text" name="user[username]" /></p>
  <p>Password: <input type="password" name="user[password]" /></p>
  <input type="submit" value="Log In" />
</form>

    <% if flash[:success] %>
    <div style="color:green;">
      <%= flash[:success] %>
    </div>
    <% end %>

    <% if flash[:error] %>
    <div style="color:red;">
      <%= flash[:error] %>
    </div>
    <% end %>
</section>
